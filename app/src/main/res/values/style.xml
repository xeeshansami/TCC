<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTheme</item>
        <item name="colorPrimaryDark">@color/grey</item>
        <item name="colorAccent">@color/grey</item>
        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>
        <item name="android:fontFamily">@font/calibrib</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- RatingBar -->
    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@mipmap/ic_rating_start_green</item>
        <item name="android:indeterminateDrawable">@mipmap/ic_rating_start_white</item>
        <item name="android:minHeight">13.4dp</item>
        <item name="android:maxHeight">13.4dp</item>
    </style>
    <style name="AppThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/grey</item>
        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>
        <item name="android:fontFamily">@font/imprima_regular</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorTheme</item>
    </style>
    <style name="NestedScrollBarStyle">
        <item name="android:scrollbarThumbVertical">@color/colorTheme</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="Loader" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="roundedImageViewRounded">
        <item name="cornerSize">50%</item>
    </style>

    <style name="squareImageViewRounded">
        <item name="cornerSize">5%</item>
    </style>
    <style name="DarkTheme" parent="Theme.AppCompat.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>