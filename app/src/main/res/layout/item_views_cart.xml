<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:background="@drawable/bg_border_filled"
    android:orientation="horizontal"
    android:weightSum="5"
    android:padding="@dimen/_10sdp">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgid"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/squareImageViewRounded"
        app:srcCompat="@drawable/diagnose9image" />

    <LinearLayout
        android:layout_weight="5"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2">

        <TextView android:id="@+id/txtPopluarName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_weight="2"
            android:maxLines="1"
            android:singleLine="true"
            android:text="asdasdasdasdasdasdasdasdasdasdas"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView android:id="@+id/priceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:maxLines="1"
                android:singleLine="true"
                android:text="$30"
                android:textColor="@color/colorTheme"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:singleLine="true"
                android:text=" X "
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"></TextView>
            <TextView
                android:id="@+id/txtQuantityCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:singleLine="true"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:padding="@dimen/_5sdp"
            android:background="@drawable/cart_button_bg"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/idMinus"
                android:gravity="center"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/black"
                android:text="-"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                ></TextView>
            <TextView
                android:id="@+id/idQuantity"
                android:gravity="center"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/black"
                android:text="1"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                ></TextView>
            <TextView
                android:id="@+id/btnPlus"
                android:gravity="center"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/black"
                android:text="+"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                ></TextView>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@mipmap/ic_delete"
        app:tint="@color/red"></ImageView>
</LinearLayout>
