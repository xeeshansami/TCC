<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomOption"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.3"
    android:background="@drawable/bg_border_carts"
    android:orientation="vertical"
    android:weightSum="3">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/card_border_profile"
        tools:context=".controllers.launcher">
        <FrameLayout
            android:padding="@dimen/_2ssp"
            android:id="@+id/imageSectorLY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgid"
                android:layout_gravity="center_vertical"
                app:shapeAppearanceOverlay="@style/squareImageViewRounded"
                android:layout_width="@dimen/_80sdp"
                app:srcCompat="@drawable/coupons"
                android:scaleType="center"
                android:layout_height="@dimen/_80sdp"
                />

        </FrameLayout>


        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_marginLeft="@dimen/_90sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView android:id="@+id/locationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:maxLines="1"
                android:text="Vegetable Salad"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp"></TextView>

            <TextView android:id="@+id/locationDisction"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DHA Defence Karacji"
                android:maxLines="5"
                android:textSize="@dimen/_14sdp"></TextView>


            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <RatingBar
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="4"
                android:stepSize="10"
                />
                <TextView
                    android:id="@+id/ratingValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4.5+"
                    android:textSize="@dimen/_10sdp"></TextView>
            </LinearLayout>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone number"
            android:textSize="@dimen/_10sdp"></TextView>

        <LinearLayout
            android:weightSum="5"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1 2568 14856 5"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"></TextView>
            <ImageView
                android:id="@+id/callBtn"
                android:layout_gravity="center_vertical"
                android:src="@drawable/phone_call"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"></ImageView>

            <ImageView
                android:id="@+id/messagebtn"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/messages"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"></ImageView>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Strains"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"></TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvStrains"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="true"
            android:fadingEdge="vertical"
            android:layoutAnimation="@anim/list_anim_slide_right_to_left"
            android:paddingTop="@dimen/_10sdp"
            android:requiresFadingEdge="vertical"
            />


    </LinearLayout>

</LinearLayout>