<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="@dimen/_246sdp"
android:layout_height="wrap_content"
android:background="@android:color/transparent"
android:filterTouchesWhenObscured="true"
android:orientation="vertical">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_centerHorizontal="true"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_175sdp">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_143sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/shape_all_round_corners"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></View>


    <LinearLayout
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingStart="@dimen/_15sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingEnd="@dimen/_25sdp"
        android:paddingBottom="@dimen/_10sdp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout4"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingRight="@dimen/_25sdp">

      <pl.droidsonroids.gif.GifImageView
        android:id="@+id/updateProgressBar"
          android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></pl.droidsonroids.gif.GifImageView>

        <TextView android:layout_gravity="center" android:textSize="@dimen/_15sdp" android:gravity="center" android:text="@string/couponsuccess"  android:textColor="@android:color/holo_green_dark" android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        <TextView android:layout_gravity="center" android:layout_marginTop="@dimen/_10sdp" android:textSize="@dimen/_12sdp" android:gravity="center" android:text="@string/couponsuccessDesc"  android:textColor="@color/grey" android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/bt_redeem"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center|bottom"
            android:background="@drawable/shape_button_green"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>