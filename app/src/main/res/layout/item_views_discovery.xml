<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">


    <FrameLayout
        android:id="@+id/discoverFramelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgid"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_260sdp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/squareImageViewRounded"
            app:srcCompat="@drawable/diagnose9image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/productNameDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/_11sdp"></TextView>
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:weightSum="6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_weight="5"
            android:id="@+id/addtoCart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorTheme"
            android:gravity="center|center_vertical"
            android:text="@string/add_to_cart"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header" />
        <ImageView
            android:id="@+id/baskitBtn"
            android:padding="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@color/black"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_shopping_cart_24"
            app:tint="@color/white"></ImageView>
    </LinearLayout>


</LinearLayout>
