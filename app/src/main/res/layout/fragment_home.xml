<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/NestedScrollBarStyle">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".controllers.launcher">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Find the best plants TCC"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>


            <LinearLayout
                android:id="@+id/searchBg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="horizontal"
                android:background="@drawable/bg_bottom_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <EditText
                    android:layout_margin="@dimen/_5sdp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:drawableTint="@color/light_white"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/light_white"
                    android:textColorHint="@color/light_white"
                    android:drawableLeft="@drawable/places_ic_search"
                    android:background="@drawable/bg_border_filled"
                    android:id="@+id/searchtEt"
                    android:textSize="@dimen/_12sdp"
                    android:hint="@string/searchPleantsYourLike"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></EditText>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchBg">

            <LinearLayout android:id="@+id/rvLayoutButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/locationLT">

                <LinearLayout
                    android:weightSum="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView android:layout_width="@dimen/_200sdp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="Popular this week"
                        android:maxLines="1"
                        android:layout_weight="5"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"></TextView>
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/viewAll"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_gravity="right"
                        android:drawableTint="@color/grey"
                        android:drawableRight="@drawable/ic_baseline_navigate_next_24"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColorHint="@color/grey"
                        android:textSize="@dimen/_13sdp"></TextView>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPopular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="true"
                    android:fadingEdge="vertical"
                    android:layoutAnimation="@anim/layout_animation"
                    android:paddingTop="@dimen/_10sdp"
                    android:requiresFadingEdge="vertical" />
            </LinearLayout>

            <LinearLayout android:id="@+id/rvSearchResultsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvLayoutButtons">

                <LinearLayout
                    android:weightSum="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView android:layout_width="@dimen/_200sdp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="Plants by type"
                        android:maxLines="1"
                        android:layout_weight="5"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"></TextView>
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/viewAll"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_gravity="right"
                        android:maxLines="1"
                        android:drawableTint="@color/grey"
                        android:drawableRight="@drawable/ic_baseline_navigate_next_24"
                        android:singleLine="true"
                        android:textColorHint="@color/grey"
                        android:textSize="@dimen/_13sdp"></TextView>

                </LinearLayout>


                <TextView android:id="@+id/nrf_view2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_3sdp"
                    android:text="@string/no_nearest_brands_found"
                    android:textColor="@color/quantum_googred"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone"></TextView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPlantsType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="true"
                    android:fadingEdge="vertical"
                    android:layoutAnimation="@anim/layout_animation"
                    android:paddingTop="@dimen/_10sdp"
                    android:requiresFadingEdge="vertical" />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvSearchResultsLayout">

                <LinearLayout
                    android:weightSum="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView android:layout_width="@dimen/_200sdp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="Night time useage"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:layout_weight="5"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp"></TextView>
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/viewAll"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_gravity="right"
                        android:maxLines="1"
                        android:drawableTint="@color/grey"
                        android:drawableRight="@drawable/ic_baseline_navigate_next_24"
                        android:singleLine="true"
                        android:textColorHint="@color/grey"
                        android:textSize="@dimen/_13sdp"></TextView>

                </LinearLayout>

                <TextView android:id="@+id/nrf_view3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_3sdp"
                    android:text="@string/no_record_found"
                    android:textColor="@color/quantum_googred"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone"></TextView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvNightUseage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="true"
                    android:fadingEdge="vertical"
                    android:layoutAnimation="@anim/layout_animation"
                    android:paddingTop="@dimen/_10sdp"
                    android:requiresFadingEdge="vertical" />
            </LinearLayout>

        </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>